varying vec3 vtxOut;
void main()
{
    float y = vtxOut.y;
    float r,g,b;
    if (y <= 0.0) {
        r = 1.0;
        g = 1.0;
        b = 0.0;
    }
    if (y > 0.0 && y < 0.25) {
        r = 0.0;
        g = 1.0 / 0.25 * y;
        b = 1.0;
    }
    if (y == 0.25) {
        r = 0.0;
        g = 1.0;
        b = 1.0;
    }
    if (y > 0.25 && y < 0.5) {
        r = 0.0;
        g = 1.0;
        b = 1.0 - 1.0 / 0.25 * (y - 0.25);
    }
    if (y == 0.5) {
        r = 0.0;
        b = 0.0;
        g = 1.0;
    }
    if (y > 0.5 && y < 0.75) {
        g = 1.0;
        b = 0.0;
        r = 1.0 / 0.25 * (y - 0.5);
    }
    if (y == 0.75) {
        r = 1.0;
        g = 1.0;
        b = 0.0;
    }
    if (y > 0.75 && y < 1.0) {
        r = 1.0;
        g = 1.0 - 1.0 / 0.25 * (y - 0.75);
        b = 0.0;
    }
    if (y >= 1.0) {
        r = 1.0;
        g = 0.0;
        b = 0.0;
    }
    vec4 color = vec4(r,g,b,1.0);
    
    gl_FragColor=color;
}
